<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.web.mapper.SysUserMapper">

    <resultMap id="resultMap" type="Map">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
    </resultMap>

    <select id="getAllUsers" resultMap="resultMap" parameterType="Map">
        select id as id,
        username as username,
        realname as realname
        from sys_user
    </select>

    <select id="findByUsername" resultMap="resultMap" parameterType="String">
        select id as id,
        username as username,
        password as password
        from sys_user WHERE username = #{username}
    </select>

</mapper>
